int main() {
    //Matrix indexes and matrix size
    unsigned short index, matrix_size, i, j, k;
    //Inputing size of matrix
    printf("Enter the matrix size:\n");
    scanf("%hd", &matrix_size);
    //Creating square matrix with matrix size
    unsigned matrix[matrix_size][matrix_size];
    //Creating matrix of indexes
    unsigned short index_matrix[matrix_size+1];
    //Inputing Matrix elements
    for ( i = 0; i < matrix_size; i ++ ) {
        for ( j = 0; j < matrix_size; j ++ ) {
            printf("Input %i, %i element of matrix:\n", i, j);
            scanf("%i", &matrix[i][j]);
            printf( "\n" );
        }
    }
    return 0;
}    
